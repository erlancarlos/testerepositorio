<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="539dp"
        android:background="#00a651"
        android:contentDescription="teste"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".login" >

        <ImageView
            android:id="@+id/ilustracaoBatePapo"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hbioss_bate_papo" />
                
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/ilustracaoBatePapo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="157dp"
            android:background="@drawable/campologin"
            android:ems="10"
            android:hint="Usuário ou e-mail"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="#056837"
            android:textColorHint="#056837" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/editText1"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="27dp"
            android:background="@drawable/campologin"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="#056837"
            android:textColorHint="#056837" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btEntrar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLinkCadastro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/botao"
            android:height="16dp"
            android:minHeight="38dp"
            android:onClick="OnClick"
            android:text="ENTRAR"
            android:textColor="#084C0E"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textLinkRecuperaSenha"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText2"
            android:layout_below="@+id/editText2"
            android:linksClickable="true"
            android:text="Esqueci minha senha"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textLinkCadastro"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textLinkRecuperaSenha"
            android:layout_alignBottom="@+id/textLinkRecuperaSenha"
            android:layout_alignRight="@+id/editText2"
            android:linksClickable="true"
            android:text="*Não tenho cadastro"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:text="www.hbioss.com"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
        
    </RelativeLayout>

</ScrollView>